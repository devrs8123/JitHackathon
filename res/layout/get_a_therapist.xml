<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_getatherapist1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get a Therapist"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/text_getatherapist2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Dev Therapist has seen me through some incredible tough times, my life is much better than it was a year ago. - Midori"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pricing"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"/>



</LinearLayout>